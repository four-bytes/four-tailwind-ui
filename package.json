{
  "name": "@four-bytes/tailwind-ui",
  "version": "0.1.0",
  "description": "Reusable Vue 3 + Tailwind CSS UI components based on TailAdmin",
  "type": "module",
  "main": "./dist/tailwind-ui.umd.cjs",
  "module": "./dist/tailwind-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/tailwind-ui.js",
      "require": "./dist/tailwind-ui.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css",
    "./tailwind.config": "./tailwind.config.js"
  },
  "files": [
    "dist",
    "tailwind.config.js",
    "NOTICE.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .vue,.ts,.tsx",
    "lint:fix": "eslint src --ext .vue,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{vue,ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{vue,ts,tsx,css}\"",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.2.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "vue-tsc": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/four-bytes/tailwind-ui.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "tailwind",
    "tailwindcss",
    "ui",
    "components",
    "tailadmin"
  ],
  "author": "Four Bytes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/four-bytes/tailwind-ui/issues"
  },
  "homepage": "https://github.com/four-bytes/tailwind-ui#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
